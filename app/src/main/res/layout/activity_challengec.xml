<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context="com.example.apprenti.wildbuzz.ChallengeA">


    <Button
        android:id="@+id/buttonParticipationWildPicasso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/vertWCS"
        android:elevation="15dp"
        android:padding="10dp"
        android:text="@string/buttonParticipationEDT"
        android:textColor="@android:color/white"
        android:textSize="6sp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textViewTitle2"
        android:layout_alignStart="@+id/textViewTitle2" />

    <Button
        android:id="@+id/buttonGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/vertWCS"
        android:elevation="15dp"
        android:padding="20dp"
        android:text="@string/buttongallery"
        android:textColor="@android:color/white"
        android:textSize="6sp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textViewTitle2"
        android:layout_alignEnd="@+id/textViewTitle2" />

    <TextView
        android:id="@+id/textViewEDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/textViewDefouloir"
        android:textColor="@color/vertWCS"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/textViewTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewtitle2"
        android:textSize="20sp"
        android:textColor="@color/grisWCS"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/textViewDescriptionEDT"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewDescriptionEDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonParticipationWildPicasso"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="12dp"
        android:text="@string/textViewDescriptionDefouloir"
        android:textAlignment="center"
        android:textColor="@color/grisWCS"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/textViewDescriptionEDT"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="30dp"
        android:layout_marginBottom="24dp"
        app:srcCompat="@drawable/pica" />

</RelativeLayout>
